  "code": "using System;\r\nusing System.Drawing;\r\nusing Microsoft.Win32;\r\n\r\npublic static class DisplayFusionFunction\r\n{\r\n\tpublic static void Run(IntPtr windowHandle)\r\n\t{\r\n        // Get work area of primary monitor\r\n        Rectangle area = BFS.Monitor.GetPrimaryMonitorWorkArea();\r\n        \r\n        // If primary area is greater than 3000 pixels we are \r\n        // working on Ultra-Wide: enable the Tiles therefore - \r\n        // Otherwise disable them\r\n        if (area.Right > 3000 && !TitleBarButtonsEnabled()) {\r\n            BFS.DisplayFusion.RunFunction(\"Schaltflächen der Titelzeile ein-/ausblenden\");\r\n        } else if (area.Right <= 3000 && TitleBarButtonsEnabled()) {\r\n            BFS.DisplayFusion.RunFunction(\"Schaltflächen der Titelzeile ein-/ausblenden\");\r\n        }\r\n        \r\n\t}\r\n\t\r\n\tprivate static bool TitleBarButtonsEnabled()\r\n\t{\r\n        // Check the registry to see if titlebar buttons are enabled, and return a true or false\r\n        using (RegistryKey key = Registry.CurrentUser.OpenSubKey(\"Software\\\\Binary Fortress Software\\\\DisplayFusion\"))\r\n        {\r\n            if (key != null)\r\n            {\r\n                Object TitleBarButtonsEnabledValue = key.GetValue(\"TitleBarButtonsEnabled\");\r\n                \r\n                if (TitleBarButtonsEnabledValue.ToString() == \"1\")\r\n                    return true;\r\n                else\r\n                    return false;\r\n            }\r\n            else\r\n            {\r\n                return false;\r\n            }\r\n        }\r\n\t}\r\n}",
